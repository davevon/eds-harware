@model IEnumerable<hardwarestore.Models.SupplierViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Our Suppliers</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-outline-primary">  <i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<div class="row">
    <div class="col-md-3">
        <div class=" card" style="width: 18rem;">
            <div class="card-body text-center">
                @*<h1 class="card-title"> </h1>*@
                <h5 class="card-title"> @Model.Count().ToString() </h5>
                <h1>@Html.DisplayNameFor(Model=> Model.suppliers)</h1>
@*            <h5>    @Html.DisplayFor(model => ))</h5>*@
            </div>
        </div>
    </div>
</div>
<br />
<br />
<hr />
<h1> Suppliers Log</h1>
<hr />
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierEmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierMailingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SupplierEmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierMailingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @* @Html.ActionLink("Edit", "Edit", new {  id=item.Id}) *@
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"> <i class="fa fa-pencil" aria-hidden="true"> </i>Edit</a>
               @* <a asp-action="Details " class="btn btn-success" asp-route-id="@item.Id"> <i class="fa fa-info-circle" aria-hidden="true"> </i> Details</a>*@
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>

                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you would want to delete this record ?😣')"> <i class="fa fa-trash" aria-hidden="true"></i> Delete</a>

                @* @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts {
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>
}
